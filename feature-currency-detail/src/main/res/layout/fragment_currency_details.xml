<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CurrencyDetailsFragment">
    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintBottom_toTopOf="@id/details_recycler_view"
        android:layout_marginStart="5pt"
        android:layout_marginTop="2.5pt"
        android:layout_marginBottom="2.5pt"
        />

    <ImageView
        android:id="@+id/coin_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/bitcoin_exmple"
        app:layout_constraintStart_toEndOf="@id/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/details_recycler_view"
        android:layout_marginStart="5pt"
        android:layout_marginTop="2.5pt"
        android:layout_marginBottom="2.5pt"
        />
    <TextView
        android:id="@+id/coin_slug"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/coin_logo"
        android:textColor="@color/black"
        tools:text="BTC"
        app:layout_constraintTop_toTopOf="@id/coin_logo"
        app:layout_constraintBottom_toBottomOf="@id/coin_logo"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="2.5pt"
        android:gravity="center"
        android:textSize="14sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/details_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        />
</androidx.constraintlayout.widget.ConstraintLayout>